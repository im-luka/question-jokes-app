<body>
    <div class="container">
        <div class="col-md-6 text-center mb-5">
            <h2 class="text-center" style="font-family: 'Agency FB'; color: wheat;">LOG IN</h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <h3>Fill in Your data : </h3>

                <form method="post" name="form">
                    <div class="form-group">
                        <label for="Username"></label>
                        <input type="text" name="Username" class="form-control" placeholder="Enter username">
                    </div>
                    <div class="form-group">
                        <label for="Password"></label>
                        <input type="password" name="Password" class="form-control" placeholder="Enter password">
                    </div>

                    <a asp-area="" asp-controller="User" asp-action="Register" class="text-lg-right">I don't have an account!</a><br />
                    @*<button type="submit" id="register" class="btn btn-primary" style="margin-top: 30px;">Submit</button>*@
                    <input type="submit" class="btn btn-outline-primary" style="margin-top: 30px;" value="Login" />
                </form>
            </div>
        </div>

        @if (ViewData["message_login"] != null)
        {
            if (ViewData["message_login"].ToString().Equals("Welcome back!"))
            {
                <script language="javascript">
                    alert('@ViewData["message_login"]');
                    window.location = "../Home/Index";
                </script>
            }
            else
            {
                <div class="error">
                    <h3>@ViewData["message_login"]</h3>
                </div>
            }
        }
    </div>
</body>