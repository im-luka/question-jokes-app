@model Question_Application.Models.Question

@{ 

}

<body>
    <div class="container">
        <div class="col-md-6 text-center mb-5">
            <h2 class="text-center" style="font-family: 'Agency FB'; color: wheat;">Create new Question with coooool Answer: </h2>
        </div>

        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">

                <form method="post" name="form">
                    <div class="form-group">
                        <label asp-for="Question_"></label>
                        <input asp-for="Question_" class="form-control" placeholder="Enter your question">
                    </div>
                    <div class="form-group">
                        <label asp-for="Answer"></label>
                        <input asp-for="Answer" class="form-control" placeholder="Enter password">
                    </div>

                    <input type="submit" class="btn btn-outline-primary" style="margin-top: 30px;" value="Submit question" />
                </form>
            </div>
        </div>

        @if (ViewData["is_added"] != null && ViewData["is_added"].ToString() == "true")
        {
            <script language="javascript">
                alert("You have successfully added a new question!");
                window.location = "../Questions/ListOfQuestions";
            </script>
        }
    </div>
</body>